{{> header }}
<div class="container"> 
  <h1>{{title}}</h1>

{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger" role="alert">
      {{msg}}
    </div>
  {{/each}}
{{/if}}

  <form action='/register' method="POST" >
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" name='username' class="form-control" id="username"  
    placeholder="username must be between 8-16 characters">
  </div>

  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" name='email' class="form-control" id="email"  
    placeholder="email must be between 8-100 characters">
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" name='password' class="form-control" id="password" 
    placeholder="password should be at lease 8 characters">
  </div>

  <div class="form-group">
    <label for="passwordMatch">Re-Input Your Password</label>
    <input type="password" name="passwordMatch" class="form-control" id="passwordMatch" placeholder="Please re-input your password">
  </div>

<input class="btn btn-primary" type="submit" value="Submit">

</div>
{{> footer-end }}
